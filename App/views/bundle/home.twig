{% extends 'default.twig' %}
{% block content %}
    <div class="ui relaxed divided list">

        {% for dashboard in user.dashboards %}
            <div class="item">
                <i class="large archive middle aligned icon"></i>
                <div class="content">
                    <a class="header" href="/{{ dashboard.name }}">{{ dashboard.title }}</a>
                    <div class="description">{{ dashboard.summary }}</div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}